{
  "name": "model-splitter-gui",
  "main": "index.html",
  "packageManager": "npm@8.19.2",
  "nodejs": true,
  "window": {
    "id": "model-splitter-gui",
    "title": "Model Splitter GUI",
    "width": 900,
    "height": 500,
    "icon": "icon.png",
    "min_width": 900,
    "min_height": 500,
    "resizable": true
  },
  "webkit": {
    "double_tap_to_zoom_enabled": false,
    "plugin": false
  },
  "chromium-args": "--enable-logging=stderr --enable-node-worker --mixed-context",
  "dependencies": {
    "sharp": "^0.31.3"
  },
  "scripts": {
    "prepare": "npm rebuild --platform=linux --arch=x64 --libc=glibc sharp && npm rebuild --platform=win32 --arch=x64 sharp"
  }
}
