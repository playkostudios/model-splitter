{
  "name": "model-splitter",
  "version": "2.1.0",
  "description": "Splits a model into multiple models with different LOD levels and downscales textures",
  "main": "lib/index.cjs.js",
  "exports": "./lib/index.cjs.js",
  "types": "./lib/index.d.ts",
  "type": "commonjs",
  "bin": "lib/cli.js",
  "scripts": {
    "clean": "rimraf lib/* && rimraf pkgs/*",
    "copy-cesium-blobs": "shx cp -r node_modules/cesium/Build ./lib/",
    "copy-gltfpack-blobs": "shx cp node_modules/gltfpack/library.wasm ./lib/",
    "copy-third-party-blobs": "npm run copy-cesium-blobs && npm run copy-gltfpack-blobs",
    "build-lib": "tsc && esbuild --minify --bundle --sourcemap --target=es6 --platform=node --format=cjs --outfile=lib/index.cjs.js src/lib.ts",
    "build-cli": "npm run copy-third-party-blobs && esbuild --minify --bundle --target=es6 --platform=node --format=iife --banner:js='#!/usr/bin/env node' --outfile=lib/cli.js src/cli.ts",
    "pkg-cli": "pkg lib/cli.js --config cli-pkg-config.json --compress GZip",
    "build-all": "npm run build-lib && npm run build-cli",
    "pkg-all": "npm run pkg-cli",
    "build-pkg-all": "npm run clean && npm run build-all && npm run pkg-all"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/playkostudios/model-splitter.git"
  },
  "contributors": [
    "Rafael Fernandes <rafael@playko.com>",
    "Playko (https://www.playko.com/)"
  ],
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/playkostudios/model-splitter/issues"
  },
  "homepage": "https://github.com/playkostudios/model-splitter#readme",
  "devDependencies": {
    "@nodegui/nodegui": "^0.58.0",
    "@types/gm": "^1.25.0",
    "@types/node": "^18.14.6",
    "babylonjs-gltf2interface": "^5.49.0",
    "cesium": "^1.103.0",
    "esbuild": "^0.17.11",
    "gltf-pipeline": "^4.0.2",
    "gltfpack": "^0.18.0",
    "gm": "^1.25.0",
    "pkg": "^5.8.0",
    "rimraf": "^4.3.0",
    "shx": "^0.3.4",
    "typescript": "^4.9.5"
  }
}
